<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_color"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/deco_view_coin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        custom:dv_lineWidth="10dp" />

    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp">

        <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/deco_referral"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            custom:dv_lineWidth="10dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ring_pic_background" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/iv_blank_pp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/blanck_pp" />

    </RelativeLayout>

  </RelativeLayout>




